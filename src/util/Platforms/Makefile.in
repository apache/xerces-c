PLATFORM = @platform@
CC  = @cc@
CXX = @cxx@
CXXFLAGS = @cxxflags@
CFLAGS = @cflags@
PREFIX = @prefix@
LDFLAGS = @ldflags@
LIBS = @libs@
OSVER = @osver@
USELIBWWW = @uselibwww@
MESSAGELOADER = @messageloader@
TRANSCODER = @transcoder@

CD=cd

include ../../Makefile.incl

ifeq (${PLATFORM}, SOLARIS)
    SUBMODULE = Solaris
endif
ifeq (${PLATFORM}, AIX)
    SUBMODULE = AIX
endif
ifeq (${PLATFORM}, LINUX)
    SUBMODULE = Linux
endif
ifeq (${PLATFORM}, HPUX)
    SUBMODULE = HPUX
endif
ifeq (${PLATFORM}, OS390)
    SUBMODULE = OS390
endif
ifeq (${PLATFORM}, IRIX)
    SUBMODULE = IRIX
endif
ifeq (${PLATFORM}, UNIXWARE)
    SUBMODULE = UnixWare
endif
ifeq (${PLATFORM}, OS400)
    SUBMODULE = OS400
endif

includes::
	${CD} $(SUBMODULE) ; $(MAKE) $@ ; ${CD} ..

all::
	${CD} $(SUBMODULE) ; $(MAKE) $@ ; ${CD} ..

clean::
	${CD} $(SUBMODULE) ; $(MAKE) $@ ; ${CD} ..

distclean::
	${CD} $(SUBMODULE) ; $(MAKE) $@ ; ${CD} ..
